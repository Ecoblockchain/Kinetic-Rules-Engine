<h3>Micro Cloud Account details</h3>
<form action="<TMPL_VAR NAME="PLATFORM">/login/update" method="post" data-url="<TMPL_VAR NAME="PLATFORM">/login/<TMPL_VAR NAME="FMETHOD">" data-external-page="true" data-ajax="false">	
	<input type="hidden" name="login_session" value="<TMPL_VAR NAME="L_SESSION">" />
	<div  data-mini="true" data-role="controlgroup">
		<div data-role="fieldcontain">
			<label for="pem" >Email:</label>
      		<input type="text" name="email" id="pem" value="<TMPL_VAR NAME="EMAIL">" placeholder="email" data-theme="b" data-mini="true" class="ui-input-text ui-body-b ui-corner-all ui-shadow-inset">
		</div>
		<div data-role="fieldcontain">
	      <label for="pfn" >First Name:</label>
	      <input type="text" name="firstname" id="pfn" value="<TMPL_VAR NAME="FNAME">" data-theme="b" data-mini="true" class="ui-input-text ui-body-b ui-corner-all ui-shadow-inset">
		</div>
		<div data-role="fieldcontain">
	      <label for="pln" >Last Name:</label>
	      <input type="text" name="lastname" id="pln" value="<TMPL_VAR NAME="LNAME">" data-theme="b" data-mini="true" class="ui-input-text ui-body-b ui-corner-all ui-shadow-inset">
		</div>
	
		<div data-role="fieldcontain" class="ui-fieldcontain ui-body ui-br">
		  <button type="submit" data-inline="true" data-theme="a"  data-mini="true" class="ui-btn-hidden" aria-disabled="false">Update</button>
		  <a href="#" data-role="button" data-inline="true" data-rel="back" data-mini="true" class="ui-btn-hidden" aria-disabled="false">Cancel</a>
		</div>
	</div>		
</form>