<html>
<head>
<title>Describe Ruleset <TMPL_VAR NAME=RULESET_ID></title>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script>
	var foo = <TMPL_VAR NAME="point">;
	$(document).ready(function() {
		var chart;
		$(document).ready(function() {
			var $reporting = $('#reporting');
			
			chart = new Highcharts.Chart({
				chart: {
					renderTo: 'container',
					type: 'column'		
					},
				credits: {
					text: 'TENX'
				},
				title : {
					text: "TENX"
					},
				xAxis: {
					categories: <TMPL_VAR NAME="CATEGORIES">
					},
				plotOptions: {
					series: {
						column: {
							pointWidth: 20
						},
						cursor: 'pointer',
						point: { 
							events: {
								click: function(event) {
									var id = event.currentTarget.config.id;
									var s = foo[id];
									var str = "<table>";
									for(var prop in s) {
										if(s.hasOwnProperty(prop)) {
											var x = "<tr><td>" + prop + "</td><td>" + s[prop] + "</td></tr>";
											str = str + x;
										}
											
									}
									str = str + "</table>";
									$("#reporting").html(str);
								}
							}
						}
					}
				},
				labels: {
					rotation: -45,
					align: 'right',
					style: {
						fontSize: '13px',
						fontFamily: 'Verdana, sans-serif'
					}
				},
				yAxis: {
					min : 0,
					title : '<TMPL_VAR NAME="yname">'
					},	
				legend: {
					layout: 'vertical',
					floating: true,
					backgroundColor: '#FFFFFF',
					align: 'right',
					verticalAlign: 'top',
					y: 60,
					x: -60
					},
				tooltip: {
					formatter: function() {
					    var id = this.point.config.id;
						console.log(foo[id]);
						return '<b>' + this.series.name + '</b><br/>' + 
							this.x + ' : ' + this.y + ' ';
					}
				},	
				series: [{
					data: <TMPL_VAR NAME="yval">
				}]	
			});
		});
	});
</script>

</head>
<body>

<p>
<div id="container" style="width: 100%; height: 400px">
</div>
<div id="reporting"></div>

<pre>
<code>
<TMPL_VAR NAME=DATA>
</code>
</pre>

</p>




</body>
</html>